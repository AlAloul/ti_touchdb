<Alloy>
  <Window id="main" platform="ios">
    <NavigationGroup id="nav">
      <Window class="booklist" title="Books" onOpen="loadBookList">
        <View id="header">
          <TabbedBar onClick="changeGrouping">
            <Labels>
              <Label>Author</Label>
              <Label>Copyright</Label>
            </Labels>
          </TabbedBar>
        </View>
        <TableView id="tableView"/>
      </Window>
    </NavigationGroup>
  </Window>
  <Window id="main" class="booklist" title="Books" platform="android" onOpen="loadBookList">
    <View id="header">
      <Switch id="authorSwitch" titleOn="Author" titleOff="Author" onClick="changeGrouping"/>
      <Switch id="copyrightSwitch" titleOn="Copyright" titleOff="Copyright" onClick="changeGrouping"/>
    </View>
    <TableView id="tableView"/>
  </Window>
</Alloy>