<Alloy>
  <Window title="Todo Lists" onOpen="windowOpen" onClose="windowClose">
    <LeftNavButton>
      <Button title="Login" onClick="doLogin"/>
    </LeftNavButton>
    <RightNavButton>
      <Button systemButton="ADD" onClick="insertNewObject"/>
    </RightNavButton>
    <ListView onItemclick="didSelectRow">
      <ListSection dataCollection="list">
        <ListItem title="{title}" itemId="{_id}" accessoryType="Ti.UI.LIST_ACCESSORY_TYPE_DISCLOSURE"/>
      </ListSection>
    </ListView>
  </Window>
</Alloy>
